
@if (Model.Count > 0)
{
    <div class="card" style="margin-top:1em; margin-bottom:1em;">
        <div class="card-header">Message Center</div>
        <div class="card-body">

            <ul>
                @foreach (var alert in Model)
                {
                    <li>
                        @alert.AlertMessage
                    </li>
                }
            </ul>
        </div>
        <div class="card-footer">&nbsp;</div>
    </div>
}