@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityUser>

<h2>User Management</h2>

@if (!Model.Any())
{
    <tr>
        <td colspan="3" class="text-center">No user accounts</td>
    </tr>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        @foreach(IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="EditUser">Edit</a>
                        <button type="submit" class="btn btn-sm btn-primary" onclick="return confirm('Are you sure?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}

<a class="btn btn-primary" asp-action="AddUser">Add new user</a>